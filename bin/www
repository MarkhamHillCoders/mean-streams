#!/use/bin/env node

/* Module Dep. */

let app = require('../app');
let debug = require('debug')('mean-streams:server');
let http = require('http');

/* Get Port */

let port = normalizePort(process.env.PORT || '3000');
app.set('port',port);

/* Create HTTP */

let server = http.createServer(app);

/* Listen to the Port */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/* Normalize */

normalizePort = (val) => {
    let port = parseInt(val, 10);

    if (isNaN(port)) {
        return val;
    }

    if (port >= 0) {
        return port;
    }
    
    return false;
}

/* onListening */

onListening = () => {
    let addr = server.address();
    let bind = typeof addr === 'string';
        ? 'pipe' + addr
        : 'port' + addr.port;

    debug('Listening on ' + bind);
}